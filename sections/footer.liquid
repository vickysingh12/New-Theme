 {% style %}



.footer-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  max-width: 1260px;
  margin: auto;
}

.site-footer {
  background-color: #333;
  color: #fff;
  padding: 40px 20px;
}


.footer-column {
  flex: 1 1 22%;
  margin: 10px 0;
}

.footer-column h3 {
  margin-bottom: 20px;
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; 
  font-weight: 400; 
  color: #fff; 
  text-transform: uppercase; 
  letter-spacing: 1px;
}

.footer-column ul {
  list-style: none;
  padding: 0;
}

.footer-column ul li {
  margin-bottom: 10px;
}

.footer-column ul li a {
  color: #fff;
  text-decoration: none;
  transition: color 0.3s;
}

.footer-column ul li a:hover {
  color: #ccc;
}

.footer-column address {
  font-style: normal;
  line-height: 1.8;
}

.footer-column address a {
  color: #fff;
  text-decoration: none;
  transition: color 0.3s;
}

.footer-column address a:hover {
  color: #ccc;
}

@media (max-width: 768px) {
  .footer-column {
    flex: 1 1 45%;
  }
}

@media (max-width: 480px) {
  .footer-container {
    flex-direction: column;
  }
  .footer-column {
    flex: 1 1 100%;
    margin: 10px 0;
  }
}

{% endstyle %}

